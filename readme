search page:
scrapy shell 'https://rewrfsrewr.xyz/search.php?mod=forum&searchid=176203&orderby=lastpost&ascdesc=desc&searchsubmit=yes&kw=%E6%97%AC%E6%9E%9C'
response.css('a::attr(href)').getall()
response.xpath('//a[contains(@href, "forum")]/text()').re(r'forum:\s*(.*)')
response.xpath('//a[contains(@href, "image")]/text()').re(r'forum:\s*(.*)')
response.xpath('//a/@href/text()').getall()
response.xpath('//a/@href').getall()
response.xpath('//a/@href').re(r'forum:\s*(.*)')

response.css('a::attr(href)').getall()
response.css('a[href*=forum.php?mod=viewthread]::attr(href)').getall()
response.follow_all(css='a[href*="forum.php?mod=viewthread"]')

